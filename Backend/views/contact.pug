doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        title Contact Us Page
        // Link to Bootstrap CSS for styling the page
        link(
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous"
        )
        // Link to custom CSS styles
        link(rel="stylesheet" type="text/css" href="/css/styles.css")

        // Link to Bootstrap's JavaScript that we are using.
        script(
            type="text/javascript"
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"
            )

        // Inline CSS styles
        style.
            body {
                display: flex;
                flex-direction: column;
                /* Ensure the body takes full height */
                min-height: 100vh;
            }
            /* Style that pushes footer to the bottom */
            footer {
                margin-top: auto;
            }

    body
        // Go Back Button in the top-right corner
        .position-absolute.top-0.end-0.m-3
            button.btn.btn-secondary(type="button", onclick="history.back()") Go Back To Previous Page
        .mt-5
            //- Email us section
            .container.mt-3.mb-3
                h1.text-center Contact Us

            //- Form section with validation
            form(action="/contact" method="post", id="contactForm")
                .container
                    .row
                        // Name Fields
                        .col-md-5.mb-3
                            label(for="first-name").form-label Name
                                span(style="color: red") *
                            // Flexbox for layout
                            .d-flex
                                input#first-name.form-control.me-2(type="text", placeholder="First name", name="firstname")
                                br
                                span.error-message#first-name-error

                                input#last-name.form-control(type="text", placeholder="Last name", name="lastname")
                                br
                                span.error-message#last-name-error


                        // Spacer Column to provide space between name fields and comment field
                        .col-md-1.mb-3

                        // Comment Field for user input
                        .col-md-6.mb-3
                            label(for="comment").form-label Comment
                                span(style="color: red") *
                            textarea#comment.form-control(placeholder="Enter your comment", rows="5", name="comment")
                            span.error-message#comment-error


                    .row
                        // Email Field for user input
                        .col-md-5.mb-3
                            label(for="email").form-label Email
                                span(style="color: red") *
                            input#email.form-control(type="email", placeholder="Enter your email", name="email")
                            span.error-message#email-error


                    .row
                        // Submit Button to submit the form
                        .col-md-12.mb-3.text-center
                            button#submit-btn.btn.btn-primary.btn-lg.w-50(type="submit") Submit


        // Section header for authors
        .mt-5
            h1.text-center Authors

        // Authors section with images of the contributors
        .container.text-center.mt-3
            .row
                // Kalan Image and Description
                .col-md-6
                    img(src="/image/Kalan.png", alt="Kalan Kalynka", class="img-fluid rounded", style="max-width: 300px;")
                    p Kalan Kalynka

                // Dominic Image and Description
                .col-md-6
                    img(src="/image/Dominic.png", alt="Dominic Broley", class="img-fluid rounded", style="max-width: 300px;")
                    p Dominic Broley

        // Displays the footer at the bottom fo the page.
        footer.container-fluid.text-center.mt-4
            p.mb-0 &copy; 2024 Weather Dashboard. All Rights Reserved.

        // Link to custom JavaScript for contact form handling
        script.
            console.log("test");

        script(type="text/javascript" src="/js/contact.js")